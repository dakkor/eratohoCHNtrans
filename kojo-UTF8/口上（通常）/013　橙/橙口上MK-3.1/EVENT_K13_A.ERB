;@KOJO_13_MESSAGE_PLAYERCHANGE関係
;助手切り替え時に出力されます。
;助手に交代した時、助手調教から戻したときに
;助手としてしゃべる為の機能
;==================================================
@KOJO_13_MESSAGE_PLAYERCHANGE
;恋慕（でる）
IF TALENT:150 == 1 && CFLAG:7007 == 0
	PRINTFORMW 「ここからは、チェンにおまかせだよっ」
	CFLAG:7007 = 1
;服従（でる）
ELSEIF TALENT:160 == 1 && CFLAG:7007 == 0
	PRINTFORMW 「はい。チェンが%CALLNAME:MASTER%に変わって、ちょーきょーします。」
	CFLAG:7007 = 1
;それ以外（でる）
ELSEIF CFLAG:7007 == 0
	PRINTFORMW 「じゃあ、ここからはチェンがちょーきょーするね」
	CFLAG:7007 = 1
;恋慕(戻る）
ELSEIF TALENT:150 == 1 && CFLAG:7007 == 1
	PRINTFORMW 「じゃあチェンは一回戻るよ。続きがんばってね」
	CFLAG:7007 = 0
;服従(戻る）
ELSEIF TALENT:160 == 1&& CFLAG:7007 == 1
	PRINTFORMW 「ここからは、%CALLNAME:MASTER%に直接ちょーきょーしてもらいます。」
	CFLAG:7007 = 0
;それ以外(戻る）
ELSEIF CFLAG:7007 == 1
	PRINTFORMW 「じゃあ、チェンは一回戻るよ」
	CFLAG:7007 = 0
ENDIF
