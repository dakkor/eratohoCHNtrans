;==============================================================
;アリス口上
;名前を教えるイベント
;==============================================================
@K14_NAMEINPUT
PRINTL 名前を入力してください
PRINTL 　
$INPUT_LOOP_3
INPUTS
STRLENS RESULTS
IF RESULT > 14
	IF CFLAG:7000 == 1
		PRINTFORML 「長すぎるわ、愛称で教えてよ」
		GOTO INPUT_LOOP_3
	ELSE
		PRINTFORML 「もう少し短くできない？」
		GOTO INPUT_LOOP_3
	ENDIF
ELSEIF RESULTS == ""
	GOTO INPUT_LOOP_3
ELSE
	IF RESULTS == "アリス"
		IF CFLAG:7000 == 1
			PRINTFORMW 「偶然ね、私と同じ名前なんて」
		ELSE
			PRINTFORMW 「いやいや、それは私の名前よ？」
		ENDIF
	ELSEIF RESULTS == "ロリス"
		IF CFLAG:7000 == 1
			PRINTFORMW 「…何その名前、なんか腹立つわね」
		ELSE
			PRINTFORMW 「…ふうん、変わった名前ね」
		ENDIF
	ELSEIF RESULTS == "神綺"
		IF CFLAG:7000 == 1
			PRINTFORMW 「あら、お母さんと同じ名前なのね」
		ELSE
			PRINTFORMW 「あら、懐かしい名前ね…」
		ENDIF
	ENDIF
ENDIF
PRINTFORML 「%RESULTS%って言うのね？」
PRINTL [0] はい
PRINTL [1] いいえ
$INPUT_LOOP_4
INPUT
IF RESULT == 0
	MASTERNAME = %RESULTS%
	PRINTFORMW %CALLNAME:MASTER%は、自分の名前%MASTERNAME%を教えた
ELSEIF RESULT == 1
	PRINTFORMW 「じゃあなんて名前なの？」
	GOTO INPUT_LOOP_3
ELSE
	GOTO INPUT_LOOP_4
ENDIF
RETURN 0

